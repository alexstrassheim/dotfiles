{
   "diagnostic.checkCurrentLine": true,
   "suggest.floatConfig": {
      "border": true,
      "maxWidth": 120
   },
   "hover.floatConfig": {
      "border": true,
      "maxWidth": 120
   },
   "signature.floatConfig": {
      "border": true,
      "maxWidth": 120
   },
   "diagnostic.floatConfig": {
      "border": true,
      "maxWidth": 120
      // "winblend": 15,
      // "focusable": true,
      // "highlight": "#400ee6",
      // "borderhighlight": "#D9AE80"
   },
   "coc.preferences.formatOnType": true,
   "coc.preferences.formatOnSaveFiletypes": ["css", "markdown","python"],
   "python.formatting.provider": "black",
   "python.formatting.blackPath": "/opt/homebrew/bin/black",
   "python.formatting.blackArgs": ["--line-length", "140", "--fast"],
   "explorer.width": 40,
   "explorer.icon.enableNerdfont": true,
   "explorer.previewAction.onHover": false,
   "explorer.keyMappings.global": {
      "<cr>": ["expandable?", "expand", "open"],
      "v": "open:vsplit"
   },
   "ltex.enabled": true,
   "ltex.language": "en-US",
   "ltex.additionalRules.motherTongue": "en-US",
   "ltex.diagnosticSeverity": "information",
   "ltex.completionEnabled": true,
   "ltex.additionalRules.enablePickyRules": true,
   "coc.preferences.extensionUpdateCheck": "daily"
}
